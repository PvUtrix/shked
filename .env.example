# Конфигурация базы данных
# Строка подключения PostgreSQL
# Формат: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://username:password@localhost:5432/shked?schema=public"

# Конфигурация NextAuth
# URL, где размещено ваше приложение
NEXTAUTH_URL="http://localhost:3000"

# Секретный ключ для NextAuth.js (сгенерируйте с помощью: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Окружение Node
NODE_ENV="development"

# Опционально: Конфигурация Email (если реализуете функции email)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# EMAIL_FROM="noreply@shked.ru"

# Опционально: Конфигурация загрузки файлов
# MAX_FILE_SIZE="5242880" # 5MB в байтах
# UPLOAD_DIR="./uploads"

# Опционально: Конфигурация Redis (для кеширования)
# REDIS_URL="redis://localhost:6379"

# Опционально: Sentry (для отслеживания ошибок)
# SENTRY_DSN="your-sentry-dsn"

# Опционально: Аналитика
# NEXT_PUBLIC_GA_ID="your-google-analytics-id"
